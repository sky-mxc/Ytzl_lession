<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="500">

    <!--缩放-->
    <scale android:fromXScale="0"
        android:fromYScale="0"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"/>

    <!--旋转-->
    <rotate android:fromDegrees="-180"
        android:pivotY="50%"
        android:pivotX="50%"
        android:toDegrees="0"/>

</set>