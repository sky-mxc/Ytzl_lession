<resources>

    <attr name="word_bg"/>
    <attr name="header_bg"/>
    <attr name="font_color"/>
    <attr name="font_desc_color"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="word_bg">#fff</item>
        <item name="header_bg">@color/colorPrimary</item>
        <item name="font_color">#000</item>
        <item name="font_desc_color">#ccc</item>
    </style>

    <style name="AppThemeNight" parent="AppTheme">
        <item name="word_bg">#303830</item>
        <item name="header_bg">#575781</item>
        <item name="font_color">#FFF</item>
        <item name="font_desc_color">#eadddd</item>
    </style>

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">?attr/header_bg</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/font_color</item>
    </style>

    <style name="SettingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">?attr/word_bg</item>
    </style>

    <style name="SettingItemLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">?attr/font_color</item>
    </style>

</resources>
