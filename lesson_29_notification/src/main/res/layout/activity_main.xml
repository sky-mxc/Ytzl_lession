<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.skymxc.demo.lesson_29_notification.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">
        <CheckBox
            android:id="@+id/default_hint"
            android:text="默认通知声音震动呼吸灯"
            android:layout_columnSpan="2"/>

        <CheckBox
            android:id="@+id/sound"
            android:text="声音"/>
        <CheckBox
            android:id="@+id/vibrate"
            android:text="震动"/>
        <CheckBox
            android:id="@+id/light"
            android:text="呼吸灯"/>
        <CheckBox android:id="@+id/content_intent"
            android:text="添加通知响应Intent"/>

        <CheckBox  android:id="@+id/fullscreen"
            android:layout_columnSpan="2"
            android:text="5.0以上系统，悬挂式通知，否则直接响应PendingIntent"/>

        <CheckBox android:id="@+id/no_clean"
            android:text="通知不可清除"/>

        <CheckBox android:id="@+id/auto_clean"
            android:text="通知响应后自动清除"/>

        <CheckBox android:id="@+id/big_content"
            android:text="添加 big内容"/>
        <CheckBox  android:id="@+id/progress"
            android:text="进度条"/>
        <CheckBox android:id="@+id/indicator"
            android:text="指示器"/>
    </GridLayout>

    <Button
        android:id="@+id/send_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send notification 10"
        android:textAllCaps="false"
        android:onClick="onClick"/>

  <Button
        android:id="@+id/cancel_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel notification 10"
        android:textAllCaps="false"
        android:onClick="onClick"/>




</LinearLayout>
