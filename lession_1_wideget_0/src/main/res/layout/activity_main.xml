<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.skymxc.example.lession_1_wideget.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="This is TextView ;This is TextView ;"
        android:textSize="20sp"
        android:textColor="#24242e"
        android:singleLine="true"
        android:drawableLeft="@mipmap/ic_launcher"
        android:drawablePadding="30dp"/>


    <!--textAllCaps     :字母不会全部大写了-->
    <Button
        android:id="@+id/buttonBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Click"
        android:textAllCaps="false" />


    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="follow you"
        android:lines="2"
        android:maxLines="3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你喜欢的运动："
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/checkboxClimb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="爬山 climb mountain"/>


    <!--button="@mipmap/ic_launcher"   按钮替换为 图片-->
    <CheckBox
        android:id="@+id/checkboxSwimming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="游泳 swimming"/>

    <!--button="@null"  去除 前面按钮-->
    <CheckBox
        android:id="@+id/checkboxSleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="睡觉 sleep"
        android:button="@null"/>


</LinearLayout>
