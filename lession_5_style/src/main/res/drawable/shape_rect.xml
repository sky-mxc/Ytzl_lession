<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"><!--默认就是矩形-->

    <!--solid 纯色填充-->
    <solid android:color="#f00"/>

    <!--stroke 边框 -->
    <!-- 虚线框 dashGap  间隔-->
    <!-- 虚线框 dashWidth 虚线的长度-->
    <stroke android:color="#0f0" android:width="5dp"
        android:dashGap="10dp"
        android:dashWidth="20dp"/>

    <!--渐变 startColor 起始色 -->
    <!--渐变 endColor 结束色 -->
    <!--渐变 angle 调整 渐变的角度 只能是45的倍数 逆时针旋转 -->
   <!-- <gradient android:startColor="#f00"
        android:endColor="#00f"
        android:angle="45"/>-->

    <!--镜像 渐变  角度无效 必须设置渐变 半径-->
    <!--gradientRadius 渐变半径-->
    <!--centerX ,centerY 渐变中心  0-1之间的浮点数  默认是0.5 在中间-->
    <!--<gradient android:startColor="#f00"
        android:endColor="#00f"
        android:type="radial"
        android:gradientRadius="180"
        android:centerX="0"
        android:centerY="0"/>-->

    <!--扫描线类渐变 sweep-->
    <gradient android:startColor="#f00"
        android:endColor="#00f"
        android:type="sweep"
        android:centerX="0.5"
        android:centerY="0.5"/>

    <!--圆角-->
    <corners android:bottomLeftRadius="50dp"
        android:bottomRightRadius="100dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="180dp"/>

    <!--Size 设置宽高-->
    <size android:height="400dp"
        android:width="300dp"/>

    <padding
        android:bottom="10dp" />

</shape>