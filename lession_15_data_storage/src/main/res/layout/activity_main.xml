<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.skymxc.demo.lession_15_data_storage.MainActivity">

    <CheckBox
        android:id="@+id/push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否追加到源文件末尾"/>

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入数据进行存储"/>
    <Button
        android:id="@+id/save_inner_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="存入内存"/>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/read_inner_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读取内部存储到TextView"
        android:onClick="onClick"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/save_outter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存到外部SDCard"
        android:onClick="onClick"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/read_outter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读取外部SDCard"
        android:onClick="onClick"
        android:textAllCaps="false"/>




</LinearLayout>
